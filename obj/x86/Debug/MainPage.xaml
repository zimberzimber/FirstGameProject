<Page
    x:Class="GameProject.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="850" Width="800">

	<Grid>
		<Canvas x:ConnectionId='2' Name ="GameCanvas" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="800" Height="800" Background="Black"/>
		<Canvas/>
		<CommandBar x:ConnectionId='3' Name="CommandBarUI">
			<CommandBar.Content>
				<TextBlock x:ConnectionId='8' Name="Title" Text="Make enemies touch each other!" Margin="25,13,0,0"/>
			</CommandBar.Content>
			<AppBarButton x:ConnectionId='9' Name ="MuteButton" Icon="Mute" Label="Mute"                         />
			<AppBarButton x:ConnectionId='10' Name ="LoadButton" Icon="Upload" Label="Load"                         />
			<AppBarButton x:ConnectionId='11' Name ="SaveButton" Icon="Save" Label="Save"                         />
			<AppBarButton x:ConnectionId='12' Name ="RestartButton" Icon="Refresh" Label="Restart (R)"                            />
			<AppBarButton x:ConnectionId='13' Name ="PauseButton" Icon="Pause" Label="Pause (P)"                          />
			<AppBarButton x:ConnectionId='14' Name ="CancelButton" Icon="Cancel" Label="Exit (Esc)"                          />
		</CommandBar>
		<TextBlock x:ConnectionId='4' Name ="OverlayText" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Text="" FontSize="100" Foreground="White" Opacity="0.5" Margin="0,-100,0,0"/>
		<TextBlock x:ConnectionId='5' Name ="OverlaySubtext" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" Text="" FontSize="50" Foreground="White" Opacity="0.5" Margin="0,425,0,0"/>
		<TextBlock x:ConnectionId='6' Name ="LevelDisplay" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Left" Text="" FontSize="25" Foreground="White" Opacity="0.5" Margin="10,50,0,0"/>
		<MediaElement x:ConnectionId='7' Name ="MusicPlayer" HorizontalAlignment="Left" Height="0" Margin="0,-50,0,0" VerticalAlignment="Top" Width="0"                        />
	</Grid>
</Page>

